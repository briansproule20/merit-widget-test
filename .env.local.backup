# Minimal configuration to run the development server
APP_URL="http://localhost:3000"

# Required for Next Auth (generate a random secret)
AUTH_SECRET="your-secret-key-here-for-development-only"

# Required - at least one auth provider must be configured
# Using GitHub for minimal setup (you can use dummy values for development)
AUTH_GITHUB_ID="dummy-github-id"
AUTH_GITHUB_SECRET="dummy-github-secret"

# Database - using PostgreSQL as required by the schema
DATABASE_URL="postgresql://postgres:password@localhost:5432/open-chat"

# Required API key (you can use a dummy value for widget testing)
OPENROUTER_API_KEY="dummy-openrouter-key"

# Optional - for the GitHub widget functionality (add your real token later)
GITHUB_TOKEN="your-github-token-here"
